<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', user: @user, new_book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table>
        <% @books.each do |book| %>
          <%= link_to(user_path(book.user.id)) do %>
          <div class="card">

              <div>
                <p><%= image_tag book.get_image(200,200) %></p>
                <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
                <p>感想：<%= book.body %></p>
                <p>ユーザーネーム：<%= book.user.name %></p>
              </div>
          </div>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
