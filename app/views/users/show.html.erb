<div class="container">
  <div class="row">
    <div class="colum-5">
      <%= render 'books/list', user: @user, new_book: @book %>
    </div>
    <div class="colum-7">
      <table>
        <% @books.each do |book| %>
          <tr>
            <%= link_to book_path(book.id) do %>
              <%= image_tag book.get_image %>
            <% end %>
            <p>ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
            <p>題名：<%= book.title %></p>
            <p>感想：<%= book.body %></p>
            <p>ユーザーネーム：<%= book.user.name %></p>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
