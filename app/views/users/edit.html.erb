<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @show_user, new_book: @new_book %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h2>Editing User</h2>
      <% if @user_update.errors.any? %>
      <%= @user_update.errors.count %>件のエラーが発生しました
      <ul>
        <% @user_update.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <label for="inputName">名前</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
        <label for="inputIntroduction">紹介文</label>
        <%= f.text_field :introduction, id:"inputIntroduction", placeholder:"Introduction"%>
        <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>