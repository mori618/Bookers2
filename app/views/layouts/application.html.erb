<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/9235c0d6d5.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="contener">
      <nav class="navber navbar-light bg-dark row">
      <div class="link col-2 pull-left">
        <i class="fa-solid fa-book"></i>
        <%= link_to 'Bookers', root_path, {:class => "link"} %></div>
      <% if user_signed_in? %>
        <div class="link col-1 pull-right">
        <i class="fa-solid fa-house"></i>
        <%= link_to 'Home', user_path(current_user.id), {:class => "link"} %>
        </div>
        <div class="link col-1 pull-right">
          <i class="fa-solid fa-users"></i>
          <%= link_to 'Users', users_path, {:class => "link"} %>
        </div>
        <div class="link col-1 pull-right">
          <i class="fa-solid fa-book-open"></i>
          <%= link_to 'Books', books_path, {:class => "link"}%>
        </div>

        <div class="link col-1 pull-right">
          <i class="fa-solid fa-right-from-bracket"></i>
          <%= link_to "Log out", destroy_user_session_path, {:class => "link", method: :delete} %>
        </div>
      <% else %>
        <div class="link col-1 pull-right">
        <i class="fa-solid fa-house"></i>
          <%= link_to 'Home', root_path, {:class => "link"} %>
        </div>
        <div class="link col-1 pull-right">
          <i class="fa-solid fa-link"></i>
          <%= link_to 'About', home_about_path, {:class => "link"} %>
        </div>

        <div class="link col-1 pull-right">
          <i class="fa-solid fa-user-plus"></i>
          <%= link_to "Sign up", new_user_registration_path, {:class => "link"} %>
        </div>
        <div class="link col-1 pull-right">
          <i class="fa-solid fa-right-to-bracket"></i>
          <%= link_to "Log in", new_user_session_path, {:class => "link"} %>
        </div>

      <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
