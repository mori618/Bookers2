<div class="container">
  <div class="row">
    <div class="col">
    <%= render 'books/list', user: @show_user, new_book: @new_book %>
    </div>
    <div class ="col">
      <h1>Book detail</h1>
    <%= image_tag @book.get_image(200,200) %>
    <%= link_to book_path(@book.id) do %>
      <%= @book.title %>
    <% end %>
    <p>感想：<%= @book.body %></p>

    <%= link_to(user_path(@book.user.id)) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
    <% end %>
    <%= link_to(user_path(@book.user.id)) do %>
    <p>ユーザーネーム：<%= @book.user.name %></p>
    <% end %>

    <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
    <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id) %>
      <%= link_to "Destroy", book_path(@book), method: :delete %>
    <% end %>
    </div>
  </div>
</div>
