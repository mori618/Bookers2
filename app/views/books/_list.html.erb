  <%= image_tag user.get_profile_image(100,100) %>
  </div>
  <div class="row">
    <p class="col-2">名前</p>
    <p class="col-2"><%= user.name %></p>
  </div>
  <div class="row">
    <p class="col-2">紹介文</p>
