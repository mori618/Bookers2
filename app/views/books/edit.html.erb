<div class="container">
  <div class="row">
    <%= render 'books/list', user: @show_user, new_book: @new_book %>
    <h1>Editing Book</h1>
    <div class="col-md-8">
      <%= form_with model: @book do |f| %>
        <label for="inputTitle">題名</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
        <label for="inputBody">紹介</label>
        <%= f.text_field :body, id:"inputBody", placeholder:"Body"%>
        <h4>表紙</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <%= f.submit "Update Book" %>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
