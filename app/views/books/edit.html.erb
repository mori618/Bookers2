<div class="container">
  <div class="row">
    <div class="col">
    <%= render 'books/list', user: @show_user, new_book: @new_book %>
    </div>
    <div class="col-md-4">
      <%= form_with model: @book do |f| %>
        <label for="inputTitle">題名</label>
        <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"Name"%>
        <label for="inputBody">紹介</label>
        <%= f.text_field :body, id:"inputIntroduction", placeholder:"Introduction"%>
        <h4>表紙</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>
