<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', user: @show_user, new_book: @new_book %>
    </div>
    <div class="offset-md-1"></div>
    <div class="col-md-8">
      <h1>Editing Book</h1>
      <% if @book_update.errors.any? %>
      <%= @book_update.errors.count %>件のエラーが発生しました
      <ul>
        <% @book_update.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <label for="inputTitle">題名</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
        <label for="inputBody">紹介</label>
        <%= f.text_field :body, id:"inputBody", placeholder:"Body"%>
        <h4>表紙</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <%= f.submit "Update Book" %>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
