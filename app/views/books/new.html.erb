<h1>投稿フォーム</h1>

<% if new_book.errors.any? %>
  <%= new_book.errors.count %>件のエラーが発生しました
  <ul>
    <% new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: new_book do |f| %>
  <h4>表紙</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>題名</h4>
  <%= f.text_field :shop_name %>
  <h4>感想</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>